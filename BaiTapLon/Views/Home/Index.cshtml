@section Scripts {
    <script>
        document.getElementById('User').addEventListener('click', function () {
            // Sử dụng Url.Action để tạo URL cho action CheckSession
            var url = '@Url.Action("CheckSession", "Home")'; // Thay ControllerName bằng tên thực của Controller
            // Chuyển hướng đến URL được tạo
            window.location.href = url;
        });
        document.getElementById('Cart').addEventListener('click', function () {
            window.location.href = '@Url.Action("Cart", "Home", new { id = 1 })';
        });
        // Hảm hiển thị số sản phẩm trong giỏ hàng
        function updateCartItemCount(count) {
            $('#cartItemCount').text(count);
        }

        // Hàm để lấy số lượng từ server và cập nhật
        function getCartItemCountFromServer() {
            $.ajax({
                type: 'GET',
                url: '/Home/GetCartItemCount', // Đặt đúng đường dẫn đến action trong controller
                success: function (response) {
                    // Cập nhật số lượng trên biểu tượng giỏ hàng
                    updateCartItemCount(response.count);
                },
                error: function () {
                    console.log('Đã xảy ra lỗi khi gửi yêu cầu đếm số lượng từ giỏ hàng.');
                }
            });
        }

        // Gọi hàm khi trang được tải
        $(document).ready(function () {
            // Gọi hàm để cập nhật số lượng từ server khi trang được tải
            getCartItemCountFromServer();
        });

        // Gọi hàm sau khi có thay đổi trong giỏ hàng
        // Thay đổi này có thể xảy ra sau khi thêm hoặc xóa sản phẩm từ giỏ hàng
        // Gọi hàm này để cập nhật số lượng trên biểu tượng giỏ hàng
        getCartItemCountFromServer();

        // Hàm tìm kiếm
        $(document).ready(function () {
            // Gắn sự kiện cho việc nhấn phím Enter trên ô input tìm kiếm
            $('#search-input').on('keypress', function (e) {
                if (e.which === 13) { // Kiểm tra nếu phím nhấn là Enter
                    e.preventDefault(); // Ngăn chặn hành động mặc định của phím Enter (submit form)
                    searchProduct(); // Gọi hàm tìm kiếm sản phẩm
                }
            });

            // Gắn sự kiện cho nút tìm kiếm
            $('#search-button').on('click', function () {
                searchProduct(); // Gọi hàm tìm kiếm sản phẩm
            });

            // Hàm tìm kiếm sản phẩm
            function searchProduct() {
                var searchTerm = $('#search-input').val().trim(); // Lấy từ khóa tìm kiếm từ ô input
                if (searchTerm !== "") {
                    $.ajax({
                        type: 'GET',
                        url: '/Home/Search',
                        data: { searchTerm: searchTerm },
                        success: function (response) {
                            // Xử lý kết quả trả về
                            console.log(response); // In ra console để kiểm tra
                            // Cuộn trang xuống vị trí của sản phẩm đầu tiên sau khi tìm kiếm thành công
                            scrollToFirstProduct();
                        },
                        error: function () {
                            alert('Đã xảy ra lỗi khi tìm kiếm');
                        }
                    });
                } else {
                    alert('Vui lòng nhập từ khóa tìm kiếm');
                }
            }

            // Hàm cuộn trang xuống vị trí của sản phẩm đầu tiên sau khi tìm kiếm thành công
            function scrollToFirstProduct() {
                var productTop = $('.product-card:first').offset().top; // Lấy vị trí của sản phẩm đầu tiên trong danh sách
                $('html, body').animate({ scrollTop: productTop }, 'slow'); // Cuộn trang xuống vị trí của sản phẩm đầu tiên
            }
        });
    </script>
