@model BaiTapLon.Models.RegisterViewModel
@{
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <title>Log In</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <h6 class="mb-0 pb-3"><span>Log In</span><span>Sign Up</span></h6>
                        <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                        <label for="reg-log"></label>
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front" id="loginTab">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <h4 class="mb-4 pb-3">Log In</h4>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-style", @placeholder = "Email" })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.PasswordFor(model => model.Password, new { @class = "form-style", @placeholder = "Mật khẩu" })
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <input type="submit" name="submitButton" value="Login" class="btn mt-4">
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-back" id="signUpTab">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <h4 class="mb-3 pb-3">Sign Up</h4>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.TenND, new { @class = "form-style", @placeholder = "Họ và tên" })
                                                    @Html.ValidationMessageFor(model => model.TenND, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.TextBoxFor(model => model.Tuoi, new { @class = "form-style", @placeholder = "Tuổi" })
                                                    @Html.ValidationMessageFor(model => model.Tuoi, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-style", @placeholder = "Email" })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.TextBoxFor(model => model.SDT, new { @class = "form-style", @placeholder = "Số điện thoại" })
                                                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-phone"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-style", @placeholder = "Địa chỉ" })
                                                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-map"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.PasswordFor(model => model.Password, new { @class = "form-style", @placeholder = "Mật khẩu" })
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-style", @placeholder = "Xác nhận mật khẩu" })
                                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <input type="submit" name="submitButton" value="Register" class="btn mt-4">
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

