@model BaiTapLon.Models.taikhoan
@{
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <title>Log In</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            @using (Html.BeginForm("Index", "Admin", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <h4 class="mb-4 pb-3">Admin Log In</h4>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.tk, new { @class = "form-style", @placeholder = "Email" })
                                                    @Html.ValidationMessageFor(model => model.tk, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.PasswordFor(model => model.mk, new { @class = "form-style", @placeholder = "Mật khẩu" })
                                                    @Html.ValidationMessageFor(model => model.mk, "", new { @class = "text-danger" })
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <input type="submit" name="submitButton" value="Login" class="btn mt-4">
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
